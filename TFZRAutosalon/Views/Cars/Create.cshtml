@model TFZRAutosalon.Models.Cars
@inject TFZRAutosalon.Services.IServices.ICarsService _carsService

@{
    Layout = "_Layout";
}

<h2>Create new car</h2>
<form asp-controller="Cars" asp-action="Add" method="post" enctype="multipart/form-data">
    <label asp-for="Manufacturer"></label>
    <select asp-for="ManufacturersId" asp-items="@_carsService.GetManufacturersForDropDown()"></select>
    <label asp-for="Categoriz"></label>
    <select asp-for="CategoryId" asp-items="@_carsService.GetCategoryForDropDown()"></select>
    <label asp-for="CarModel"></label>
    <select asp-for="CarModelId" asp-items="@_carsService.GetModelsForDropDown()"></select>
    <label asp-for="Description"></label>
    <input asp-for="Description" />



    <button type="submit">Save</button>
</form>
